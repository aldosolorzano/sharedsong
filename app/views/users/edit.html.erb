<h1>Hello, <strong><%= current_user.full_name %></strong></h1>

<%= form_for @user do |u|  %>
  <div class="form-group">
    <%= u.label :first_name%>
    <%= u.text_field :first_name,class:'form-control' %>
  </div>
  <div class="form-group">
    <%= u.label :last_name%>
    <%= u.text_field :last_name,class:'form-control' %>
  </div>
  <div class="form-group">
    <%= u.label :email%>
    <%= u.email_field :email,class:"form-control" %>
  </div>
<div class="form-group">
  <%= link_to 'Reset password', new_password_reset_path, class: 'link' %>
</div>
  <%= u.submit 'Update Profile',class:'btn btn-success' %>
<% end %>
