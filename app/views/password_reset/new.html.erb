  <h1>Reset</h1>
  <%= form_tag password_reset_index_path do %>

  <div class="form-group">
    <%= label_tag 'Current Password' %>
    <%= password_field_tag :current_password,nil,class:'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag 'Current Password Confirmation' %>
    <%= password_field_tag :current_password_confirmation,"",class:'form-control' %>
  </div>

    <div class="form-group">
      <%= label_tag 'New Password' %>
      <%= password_field_tag :password,nil,class:'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag 'New Password Confirmation' %>
      <%= password_field_tag :password_confirmation,"",class:'form-control' %>
    </div>
      <%= submit_tag 'Reset',class:'btn btn-primary' %>

  <%end%>
