<!DOCTYPE html>
<html>
  <head>
    <title>Sharesong</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= image_tag 'shared.png' %>
      <button
        type="button"
        class="navbar-toggle collapsed"
        data-toggle="collapse"
        data-target="#nav-collapsible-section">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

    </div>
    <div class="navbar-collapse collapse" id="nav-collapsible-section">
      <form class="navbar-form navbar-right">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Notifications <span class="glyphicon glyphicon-flash" style="color:yellow"></span></a>
              <ul class="dropdown-menu">
                <% if user_signed_in? %>
                  <% notification_arr = current_user.create_array_of_pending_shares %>
                  <% if notification_arr.empty? %>
                    <li>start sharing songs</li>
                  <% else %>
                    <% notification_arr.each do |s| %>
                      <li>
                        <a href="#">
                          <i class="glyphicon glyphicon-play-circle"></i>
                          <%= s[:song_title] %> -
                          <%= s[:artist] %> <br>
                          @<%= s[:user_creator] %>
                        </a>
                        <%= link_to 'Accept', root_path,style: 'color:green' %>
                        <%= link_to 'Reject', root_path,style: 'color:red' %>
                      </li>
                      <li role="separator" class="divider"></li>
                    <% end %>
                  <% end %>
                <% else%>
                  <li>please sign in</li>
                <% end  %>
              </ul>
            </li>
            <li>
              <a href="<%= new_share_path %>" class="btn btn-danger">
                <i style="color:white"class="glyphicon glyphicon-search"></i>
              </a>
            </li>
          </ul>
      </form>
      <ul class="nav navbar-nav">
        <li><%= link_to 'Dashboard', root_path %></li>
        <% if user_signed_in? %>
        <li><%= link_to 'Sign out', sessions_path,class:'center-text',method: :delete if user_signed_in?%></li>
        <% else %>
        <li><%= link_to 'Sign Up', new_user_path%></li>
        <li><%= link_to 'Sign In', new_session_path%></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

    <div class="container main">
      <%= notice || alert %>
      <%= yield %>
    </div>
  </body>
</html>
